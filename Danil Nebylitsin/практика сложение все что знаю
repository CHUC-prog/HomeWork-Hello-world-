using System;

namespace ConsoleApp2
{
    class Program
    {
        static void Main(string[] args)
        {
            // 1 Задача
            Console.WriteLine("Введите скорость 1:");
            double V1 = Convert.ToDouble(Console.ReadLine());

            Console.WriteLine("Введите скорость 2:");
            double V2 = Convert.ToDouble(Console.ReadLine());

            Console.WriteLine("Введите время:");
            double T = Convert.ToDouble(Console.ReadLine());

            Console.WriteLine("Введите путь:");
            double S = Convert.ToDouble(Console.ReadLine());


            //2 задача ФИНИШ
            Console.WriteLine("Введите позицию финиша");
            double finishPosition = Convert.ToDouble(Console.ReadLine());
            

            Console.WriteLine("Введите текушую позицию машины"); 
            double currentPosition = Convert.ToDouble(Console.ReadLine());
            string text = Console.ReadLine();
            int PEREVOD = Convert.ToInt32(text);
            float KM = 100;
            float count = PEREVOD * KM;



            double сумма = V1 + V2;
            double произведение = сумма * T;
            double сумма2 = произведение + S;
            double Дистанция = finishPosition - currentPosition;

            Console.WriteLine($"сумма:" + сумма);
            Console.WriteLine($"произведение:" + произведение);
            Console.WriteLine($"сумма2:" + сумма2);
            Console.WriteLine($"Дистанция:" + Дистанция);
            Console.WriteLine("В километрах" + count);

        }
    }
}

