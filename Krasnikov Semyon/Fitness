using System;
using System.Threading.Channels;

class FitnessProgram
{
    static void Main()
    {
        Console.WriteLine("Добро пожаловать в наш фитнес зал!");
        int choice = 0;
        while (choice != 7) 
        {

        Console.WriteLine("Выберите тренировку: 1 - Кардио, 2 - Силовая, 3 - Гибкость,  4 - На ноги, 5 - Тренеровку составляет тренер 1, 6 - тренеровку составляет тренер 2, 7 - Выход");

        choice = Convert.ToInt32(Console.ReadLine());

        switch (choice)
        {
            case 1:
                Console.WriteLine("Вы выбрали кардио, вам нужно крутьть велоипед 10 минут после этого на беговой дорожки пробегите 5 километров после этого начинайте делать берби 15 раз по 3 подхода.");
                break;
            case 2:
                Console.WriteLine("Вы выбрали силовую, вам нужно сделать штангу по десять  на трицепс 20 поднимании  после этого одахните 5 минут и приступайте к поднятию гири через плече на каждое плече по 10 раз. ");
                break;
            case 3:
                Console.WriteLine("Вы выбрали тренировку на гибкость, в положении сидя вытените одну ногу и начинайте тянуться кней так же и с другой 5 минут на каждую ногу за тем начинайте делать перекаты с ноги на другую ногу 10 раз после ложтесь в положение лодочкой и диржитесь так минимум 5 минут");
                break;
            case 4:
                Console.WriteLine("Вы выбрали тренеровку на ноги, вам нужно сделать 20 присиданий по 2 подхода  после этого выподы вперет обязательно 20 один подход раз после этого зашагивания на скомью 15 раз по 3 подхода и поднятия на носочки 20 раз по 3 подхода ");
                break;
            case 5:
                Console.WriteLine("Вы выбрали тренеровку от тренера 1, перед тренеровкой вы разминаитесь 5 минут бега на дорожке за тем делаем 10 присиданиипо 3 подхода после переходим к 20 берби 1 подход за тем переходим на 20 выподов с весом после переходим к силовым делаем весла 20 раз по 3 подхода за тем поднятие штанги на легком весе 10 раз по 3 подхода с каждым подходом вес увеличиваем.");
               break;
            case 6:
                 Console.WriteLine("Вы выбрали тренировку от тренера  2, перед тренеровкой вы разминаетесь делаете вращение гововои в прово за тем в лево 5 минут за тем делаете вращение тазом после разогрева переходим на канаты иделаем упражнение 5 минут за тем переходим на брусья и делаем подем бедра 10 раз по 2 подхода.");
                    break;

            case 7:
                  Console.WriteLine("BYE BYE");                     
                  break;
                  default:
                  Console.WriteLine("Извините, такой тренировки у нас нет");
                  break;

        }
        }
    }
}
